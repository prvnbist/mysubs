{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"],
			"env": [
				"DB_HOST",
				"DB_PORT",
				"DB_USER",
				"DB_NAME",
				"DB_PASS",
				"CLERK_WEBHOOK_SECRET",
				"NODE_ENV",
				"NEXT_PUBLIC_STATSIG_CLIENT_KEY",
				"NEXT_PUBLIC_STATSIG_USER_ID",
				"RESEND_API_KEY",
				"TRIGGER_API_KEY",
				"TRIGGER_API_URL"
			]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
